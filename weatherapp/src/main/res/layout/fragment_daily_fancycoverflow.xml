<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/background"
    android:layout_width="124dp"
    android:layout_height="130dp">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/fragment_daily_fancycoverflow_time"
        android:text="11-16"
        android:textSize="18sp"
        android:textColor="@color/general_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/fragment_daily_fancycoverflow_cond_image"
        android:src="@drawable/w100"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/fragment_daily_fancycoverflow_cond_text"
        android:text="晴 7°-8°"
        android:textSize="18sp"
        android:textColor="@color/general_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>